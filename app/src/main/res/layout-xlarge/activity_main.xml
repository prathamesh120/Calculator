<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2C2C"
    tools:context=".MainActivity"
    android:id="@+id/relativeLayout">

    <TextView
        android:layout_width="360dp"
        android:layout_height="105dp"
        android:id="@+id/textview1"
        android:textAlignment="textEnd"
        android:paddingRight="10dp"
        android:paddingTop="40dp"
        android:background="@drawable/textfield"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        tools:ignore="RtlCompat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"></TextView>

    <TextView
        android:id="@+id/textview2"
        android:layout_width="360dp"
        android:layout_height="105dp"
        android:textAlignment="textEnd"
        android:paddingRight="10dp"
        android:paddingTop="40dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/textfield"
        android:textColor="#FFFFFF"
        tools:ignore="RtlCompat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview1">

    </TextView>

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:background="@drawable/button"


        android:text="AC"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="25sp"
        app:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/textview2">

    </Button>

    <Button
        android:id="@+id/buttonBackspce"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/button"
        android:gravity="center_horizontal"
        android:paddingLeft="35dp"
        android:textSize="20sp"
        app:backgroundTint="@color/black"

        app:icon="@drawable/ic_backspace"
        app:iconTint="@android:color/holo_blue_bright"
        app:layout_constraintLeft_toRightOf="@id/buttonClear"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/textview2" />

    <Button
        android:id="@+id/buttonPercent"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/button"

        android:text="%"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="25sp"
        app:backgroundTint="@color/black"
        app:layout_constraintLeft_toRightOf="@id/buttonBackspce"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/textview2">

    </Button>

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp"

        android:background="@drawable/button"
        android:text="/"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="25sp"
        app:backgroundTint="@color/black"
        app:layout_constraintLeft_toRightOf="@id/buttonPercent"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/textview2"
        app:layout_constraintStart_toEndOf="@id/buttonPercent">

    </Button>


    <Button
        android:id="@+id/button9"
        android:layout_width="96dp"
        android:layout_height="88dp"

        android:layout_marginTop="2dp"

        android:background="@drawable/button"
        android:text="9"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        app:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonClear">

    </Button>

    <Button
        android:id="@+id/button8"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/button"

        android:text="8"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        app:backgroundTint="@color/black"
        app:layout_constraintLeft_toRightOf="@id/button9"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/buttonBackspce">

    </Button>

    <Button
        android:id="@+id/button7"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/button"

        android:text="7"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        app:backgroundTint="@color/black"
        app:layout_constraintLeft_toRightOf="@id/button8"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/buttonPercent">

    </Button>

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="wrap_content"
        android:layout_height="89dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="1dp"

        android:layout_marginTop="2dp"
        android:background="@drawable/button"
        android:text="*"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="25sp"
        app:backgroundTint="@color/black"
        app:layout_constraintLeft_toRightOf="@id/button7"
        app:layout_constraintTop_toBottomOf="@id/buttonDivide">

    </Button>

    <Button
        android:id="@+id/button6"
        android:layout_width="96dp"
        android:layout_height="88dp"

        android:background="@drawable/button"

        android:text="6"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        app:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button9">

    </Button>

    <Button
        android:id="@+id/button5"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/button"

        android:text="5"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        app:backgroundTint="@color/black"
        app:layout_constraintLeft_toRightOf="@id/button6"
        app:layout_constraintTop_toBottomOf="@id/button8">

    </Button>

    <Button
        android:id="@+id/button4"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/button"

        android:text="4"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        app:backgroundTint="@color/black"
        app:layout_constraintLeft_toRightOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/button7">

    </Button>

    <Button
        android:id="@+id/buttonSubtrack"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"

        android:background="@drawable/button"
        android:text="-"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="25sp"
        app:backgroundTint="@color/black"
        app:layout_constraintLeft_toRightOf="@id/button4"
        app:layout_constraintTop_toBottomOf="@id/buttonMultiply">

    </Button>

    <Button
        android:id="@+id/button3"
        android:layout_width="96dp"
        android:layout_height="88dp"

        android:background="@drawable/button"

        android:text="3"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        app:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button6">

    </Button>

    <Button
        android:id="@+id/button2"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/button"

        android:text="2"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        app:backgroundTint="@color/black"
        app:layout_constraintLeft_toRightOf="@id/button3"
        app:layout_constraintTop_toBottomOf="@id/button5">

    </Button>

    <Button
        android:id="@+id/button1"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/button"

        android:text="1"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        app:backgroundTint="@color/black"
        app:layout_constraintLeft_toRightOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button4">

    </Button>

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"

        android:background="@drawable/button"
        android:text="+"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="25sp"
        app:backgroundTint="@color/black"
        app:layout_constraintLeft_toRightOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/buttonSubtrack">

    </Button>

    <Button
        android:id="@+id/button0"
        android:layout_width="96dp"
        android:layout_height="88dp"

        android:background="@drawable/button"

        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        app:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button3">

    </Button>

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/button"

        android:text="."
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="25sp"
        app:backgroundTint="@color/black"
        app:layout_constraintLeft_toRightOf="@id/button0"
        app:layout_constraintTop_toBottomOf="@id/button2">

    </Button>

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="176dp"
        android:layout_height="88dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="5dp"

        android:layout_marginTop="1dp"
        android:background="@drawable/button"
        android:text="="
        android:textColor="#FFFB00"
        android:textSize="25sp"
        app:backgroundTint="@color/black"
        app:layout_constraintLeft_toRightOf="@id/buttonDot"
        app:layout_constraintTop_toBottomOf="@id/button1">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>